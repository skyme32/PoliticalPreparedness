<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Add necessary styles -->
    <style name="buttonStyle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_title">
        <item name="android:textSize">@dimen/default_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="subtitle">
        <item name="android:textSize">@dimen/default_subitle</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="default_lynk">
        <item name="android:textSize">@dimen/default_lynk</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="item_title">
        <item name="android:textSize">@dimen/default_lynk</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
